{
    "id": "chibitronics",
    "nickname": "chibitronics",
    "name": "MakeCode for Chibitronics Chibi Chip",
    "title": "makecode.chibitronics.com - Blocks / Javascript editor for Chibi Chip",
    "description": "A Blocks / JavaScript code editor for the Chibi Chip board.",
    "corepkg": "core",
    "bundleddirs": [
        "libs/core",
        "libs/scope"
    ],
    "cloud": {
        "workspace": false,
        "packages": true,
        "sharing": true,
        "publishing": true,
        "githubPackages": true
    },
    "compile": {
        "useModulator": true,
        "hasHex": true,
        "useMkcd": true,
        "isNative": true,
        "flashCodeAlign": 16,
        "upgrades": [{
            "type": "package",
            "map": {
                "ltc": "core"
            }
        }]
    },
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "textBlocks": false,
        "variablesBlocks": true,
        "functionBlocks": true,
        "onStartColor": "#FFAB19",
        "onStartNamespace": "loops",
        "onStartWeight": 54
    },
    "simulator": {
        "autoRun": true,
        "enableTrace": true,
        "streams": false,
        "aspectRatio": 1.22,
        "parts": false,
        "partsAspectRatio": 0.75,
        "boardDefinition": {
            "visual": "ltc",
            "gpioPinBlocks": [
                [
                    "D0"
                ],
                [
                    "D1"
                ],
                [
                    "D2"
                ],
                [
                    "D3"
                ],
                [
                    "D4"
                ],
                [
                    "D5"
                ],
                [
                    "TXT",
                    "fiveVolt",
                    "GND2"
                ]
            ],
            "gpioPinMap": {
                "D0": "D0",
                "D1": "D1",
                "D2": "D2",
                "D3": "D3",
                "D4": "D4",
                "D5": "D5",
                "TXT": "TXT",
                "fiveVolt": "+5V",
                "GND2": "GND2"
            },
            "analogInPins": [
                "A0",
                "A1",
                "A2",
                "A3",
                "A4",
                "A5"
            ],
            "groundPins": [
                "GND0",
                "GND1"
            ],
            "threeVoltPins": [
                "+3v"
            ],
            "attachPowerOnRight": true,
            "onboardComponents": [
                "neopixel"
            ],
            "useCrocClips": true,
            "marginWhenBreadboarding": [
                10,
                0,
                0,
                0
            ]
        }
    },
    "compileService": {
        "buildEngine": "platformio",
        "platformioIni": [
            "[env:myenv]",
            "platform = ltc",
            "framework = ltc",
            "board = ltc"
        ],
        "serviceId": "ltc"
    },
    "appTheme": {
        "accentColor": "#17C7D1",
        "logoUrl": "http://chibitronics.com/",
        "logo": "./static/chibitronics_logo_white.svg",
        "docsLogo": "./static/logo.square.white.svg",
        "portraitLogo": "./static/logo.square.white.svg",
        "footerLogo": "./static/logo.portrait.white.svg",
        "cardLogo": "./static/icons/apple-touch-icon.png",
        "appLogo": "./static/icons/apple-touch-icon.png",
        "organization": "Microsoft",
        "organizationUrl": "https://makecode.com",
        "organizationLogo": "./static/Microsoft-logo_rgb_c-gray-square.png",
        "organizationWideLogo": "./static/Microsoft-logo_rgb_c-white.png",
        "homeUrl": "https://makecode.chibitronics.com/",
        "embedUrl": "https://makecode.chibitronics.com/",
        "privacyUrl": "https://makecode.com/privacy",
        "termsOfUseUrl": "https://makecode.com/termsofuse",
        "githubUrl": "https://github.com/Microsoft/pxt-chibitronics",
        "feedbackUrl": "https://www.research.net/r/MCchibi",
        "crowdinProject": "kindscript",
        "boardName": "Chibi Chip",
        "showHomeScreen": true,
        "homeScreenHero": "./static/getting-started/getting-started.png",
        "sideDoc": "tutorials/getting-started",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            },
            {
                "name": "Chibi Scope setup",
                "path": "/scope-setup"
            },
            {
                "name": "Buy",
                "path": "https://chibitronics.com/shop/love-to-code-chibi-chip-cable/"
            }
        ],
        "invertedMenu": true,
        "coloredToolbox": true,
        "monacoToolbox": true,
        "hasAudio": false,
        "blocklyOptions": {
            "grid": {
                "spacing": 45,
                "length": 7,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": false
            }
        },
        "simAnimationEnter": "fly down in",
        "simAnimationExit": "fly up out",
        "highContrast": true,
        "useUploadMessage": true,
        "downloadIcon": "play",
        "extendEditor": true,
        "blockColors": {
            "loops": "#FFAB19",
            "logic": "#FFBF00",
            "math": "#59C059",
            "variables": "#FF6680",
            "text": "#5cb1d6"
        },
        "socialOptions": {
            "twitterHandle": "chibitronics",
            "orgTwitterHandle": "MSMakeCode",
            "hashtags": "MakeCode"
        },
        "monacoColors": {
            "editor.background": "#ecf0f1"
        }
    }
}
